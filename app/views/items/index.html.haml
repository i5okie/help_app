.row
  .large-12.columns
    .panel
      %i.fa.fa-list.fa-1x ITEMS
      / %a.pull-right{:href => new_product_path}
      /   %i.fa.fa-plus.fa-1x 
    %table.tude
      %thead
        %tr
          %th{width: 400} Name
          %th{width: 150} Manufacturer
          %th{width: 200} Model
          %th{width: 225}
      %tbody
        - @items.each do |item|
          %tr.classy
            %td= item.name
            %td= item.manufacturer
            %td= item.model
            / %td
            /   .button-group.radius.pull-right
            /     %a.button.secondary.tiny{:href => product_path(product)}
            /       %i.fa.fa-info.fa-fw.fa-2x
                  
            /     %a.button.secondary.tiny{:href => edit_product_path(product)}
            /       %i.fa.fa-pencil.fa-fw.fa-2x
                  
            /     %a.button.alert.tiny{:href => product, method: :delete, data: { confirm: 'Are you sure?' }}
            /       %i.fa.fa-trash-o.fa-fw.fa-2x

                
    %br